<div class="container">
  <h1 class="mt-4 mb-5">ユーザー詳細</h1>
  <div class="row">
    <div class="col-5">
      <div class="row">
        <div class="col-6">
          <%= image_tag @user.image, class: "img-thumbnail" %>
        </div>
        <div class="co-6">
          <table class="table">
            <tbody>
              <tr>
                <th>名前</th>
                <td><%= @user.name %></td>
              </tr>
              <tr>
                <th>email</th>
                <td><%= @user.email %></td>
              </tr>
            </tbody>
          </table>
          <div class="ml-3">
            <%= link_to "編集する", edit_user_path(@user.id) %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-7">

    </div>
  </div>
</div>
