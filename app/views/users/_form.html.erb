<%= form_with(model: @user, local: true) do |form| %>
  <% if @user.errors.any? %>
    <div class="alert alert-danger alert-dismissible fade show">
      <h5 class="alert-heading"><%= @user.errors.count %>件のエラーがあります</h5>
      <% @user.errors.full_messages.each do |msg| %>
      <ul>
        <li><hr><%= msg %></li>
      </ul>
      <% end %>
      <button class="close" data-dismiss="alert">&times;</button>
    </div>
  <% end %>

  <div class="form-group form-row">
    <%= form.label :名前, class: "col-md-3 col-form-label text-md-right mb-3" %>
    <div class="col-md-5">
    <%= form.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group form-row">
    <%= form.label :email, class: "col-md-3 col-form-label text-md-right mb-3" %>
    <div class="col-md-5">
    <%= form.email_field :email, class: "form-control" %>
    </div>
  </div>
  <div class="form-group form-row">
    <%= form.label :パスワード, class: "col-md-3 col-form-label text-md-right mb-3" %>
    <div class="col-md-5">
    <%= form.password_field :password, class: "form-control" %>
    </div>
  </div>
  <div class="form-group form-row">
    <%= form.label :パスワードの確認, class: "col-md-3 col-form-label text-md-right mb-3" %>
    <div class="col-md-5">
    <%= form.password_field :password_confirmation, class: "form-control" %>
    </div>
  </div>  
  <div class="form-group form-row">
    <%= form.label :プロフ写真, class: "col-md-3 col-form-label text-md-right mb-3" %>
    <div class="col-md-5">
    <%= form.file_field :image, class: "form-control" %>
    </div>
  </div>
  <div class="row">
    <div class="col-8 text-right">
      <%= form.submit class: "btn btn-outline-primary", value: "登録"%>
    </div>
  </div>
<% end %>
