<div class="containew">
  <% if flash[:danger] %>
    <div class="alert alert-danger alert-dismissible fade show">
      <p><%= flash[:danger] %></p>
      <button class="close" data-dismiss="alert">&times;</button>
    </div>
  <% end %>
  <% if flash[:notice] %>
    <div class="alert alert-warning alert-dismissible fade show">
      <p><%= flash[:notice] %></p>
      <button class="close" data-dismiss="alert">&times;</button>
    </div>
  <% end %>

  <h1 class="mt-4 mb-5">ログイン</h1>
  <%= form_with(scope: :session, url: sessions_path,  local: true) do |form| %>
    <div class="form-group form-row">
      <%= form.label :email, class: "col-md-3 col-form-label text-md-right mb-3" %>
      <div class="col-md-5">
      <%= form.email_field :email, class: "form-control" %>
      </div>
    </div>
    <div class="form-group form-row">
      <%= form.label :パスワード, class: "col-md-3 col-form-label text-md-right" %>
      <div class="col-md-5">
      <%= form.password_field :password, class: "form-control", rows:"5" %>
      </div>
    </div>
    <div class="row">
      <div class="col-8 text-right">
        <%= form.submit class: "btn btn-outline-primary", value: "ログイン"%>
      </div>
    </div>
  <% end %>
</div>
