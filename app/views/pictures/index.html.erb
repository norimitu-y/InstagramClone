<div class="container">
  <div class="row">
    <div class="col-md-8 row-scrollable">
      <% @pictures.reverse_each do |picture| %>
        <div class="row justify-content-center">
          <div class="col-md-10 mb-1">
            <div class="card mb-3">
              <div class="card-header bg-white border-bottom-0">
                <div class="row">
                  <div class="col-3">
                    <%= image_tag picture.user.image, class: "img-thumbnail" %>
                  </div>
                  <div class="co-5">
                    <table class="table">
                      <tbody>
                        <tr>
                          <th>投稿ユーザー</th>
                          <td><%= picture.user.name %></td>
                        </tr>
                        <tr>
                          <th></th>
                          <td></td>
                        </tr>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
              <div class="card-body">
                <h5 class="card-title"><%= picture.title %></h5>
                <%= image_tag picture.image, class: "card-img mb-3" %>
                <%= link_to "詳細", picture_path(picture.id), class: "card-link" %>
                <% unless picture.user_id == current_user.id %>
                  <% @favorite = current_user.favorites.find_by(picture_id: picture.id) %>
                  <% if @favorite.present? %>
                    <%= link_to 'お気に入り解除', favorite_path(id: @favorite.id), method: :delete, class: "card-link" %>
                  <% else %>
                    <%= link_to 'お気に入り登録', favorites_path(picture_id: picture.id), method: :post, class: "card-link"  %>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="col-md-4">
      <div class="row bg-white">
        <div class="col-6">
          <%= image_tag current_user.image, class: "img-thumbnail" %>
        </div>
        <div class="co-6">
          <table class="table">
            <tbody>
              <tr>
                <th>名前</th>
                <td><%= current_user.name %></td>
              </tr>
            </tbody>
          </table>
          <div class="ml-3">
            <%= link_to "ログアウト", session_path(current_user.id), method: :delete %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
