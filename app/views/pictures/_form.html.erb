<%= form_with(model: @picture, url: choose_new_or_edit, local: true) do |form| %>
  <% if @picture.errors.any? %>
    <div class="alert alert-danger alert-dismissible fade show">
      <h5 class="alert-heading"><%= @picture.errors.count %>件のエラーがあります</h5>
      <% @picture.errors.full_messages.each do |msg| %>
      <ul>
        <li><hr><%= msg %></li>
      </ul>
      <% end %>
      <button class="close" data-dismiss="alert">&times;</button>
    </div>
  <% end %>

  <div class="form-group form-row">
    <%= form.label :写真, class: "col-md-3 col-form-label text-md-right mb-3" %>
    <div class="col-md-5">
    <%= form.file_field :image, class: "form-control" %>
    </div>
  </div>
  <div class="form-group form-row">
    <%= form.label :タイトル, class: "col-md-3 col-form-label text-md-right mb-3" %>
    <div class="col-md-5">
    <%= form.text_field :title, class: "form-control" %>
    </div>
  </div>
  <div class="form-group form-row">
    <%= form.label :コメント, class: "col-md-3 col-form-label text-md-right" %>
    <div class="col-md-5">
    <%= form.text_area :content, class: "form-control", rows:"5" %>
    </div>
  </div>
  <div class="row">
    <div class="col-8 text-right">
      <%= form.submit class: "btn btn-outline-primary", value: "Post"%>
    </div>
  </div>
<% end %>
