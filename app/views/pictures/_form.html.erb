<form>
  <%= form_with(model: @picture, local: true) do |form| %>
    <div class="form-group form-row">
      <%= form.label :タイトル, class: "col-md-3 col-form-label text-md-right mb-3" %>
      <div class="col-md-5">
      <%= form.text_field :title, class: "form-control" %>
      </div>
    </div>
    <div class="form-group form-row">
      <%= form.label :コメント, class: "col-md-3 col-form-label text-md-right" %>
      <div class="col-md-5">
      <%= form.text_area :content, class: "form-control", rows:"5" %>
      </div>
    </div>
    <div class="row">
      <div class="col-8 text-right">
        <%= form.submit class: "btn btn-outline-primary", value: "Post"%>
      </div>
    </div>
  <% end %>
</form>
